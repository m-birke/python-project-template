{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "includePaths": [
    "**/.pre-commit-config.yaml"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pre-commit"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "enabled": true
    }
  ]
}
